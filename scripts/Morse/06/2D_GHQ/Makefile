#==============================================================================#
#			   Fortran Compiler/Flags
#-O0=no optimization,-O3=full optimization
#==============================================================================#
FC=gfortran 
#FFLAGS=-O2
FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace 
#==============================================================================#
#			   	Targets 
#==============================================================================#
all: dgb
#==============================================================================#
#			Compile all Fortran Files
#==============================================================================#
%.o: %.f90
	$(FC) $(FFLAGS) -o $@ -c $^
#==============================================================================#
#				DGB Cluster
#==============================================================================#
dgb: QRGB_GHQ.o gen_hermite_rule.o 
	$(FC) -o $@ $^  -llapack
#==============================================================================#
clean:
	rm -rf *.o *.mod eigenvalues.dat overlap_eigenvalues.dat simulation.dat abs_error.dat rel_error.dat alphas_GHQ.dat dgb
