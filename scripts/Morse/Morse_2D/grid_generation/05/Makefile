#==============================================================================#
#			   Fortran Compiler/Flags
#-O0=no optimization,-O3=full optimization
#==============================================================================#
FC=gfortran 
#FFLAGS=-O2
FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace -llapack
#==============================================================================#
#			   	Targets 
#==============================================================================#
all: mmc
#==============================================================================#
#			Compile all Fortran Files
#==============================================================================#
%.o: %.f90
	$(FC) $(FFLAGS) -o $@ -c $^
#==============================================================================#
#				DGB Cluster
#==============================================================================#
mmc: lj_grid.o 
	$(FC) -o $@ $^  
#==============================================================================#
clean:
	rm -rf *.o *.mod mmc 
